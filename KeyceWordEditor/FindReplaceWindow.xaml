<Window x:Class="KeyceWordEditor.FindReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rechercher et Remplacer" Height="200" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <Label Content="Rechercher:"/>
        <TextBox x:Name="FindTextBox" Margin="0,0,0,10"/>

        <Label Content="Remplacer par:"/>
        <TextBox x:Name="ReplaceTextBox" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Rechercher" Click="FindButton_Click" Margin="5"/>
            <Button Content="Remplacer" Click="ReplaceButton_Click" Margin="5"/>
            <Button Content="Remplacer tout" Click="ReplaceAllButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>