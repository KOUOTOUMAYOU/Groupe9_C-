<Window x:Class="KeyceWordEditor.Dialogs.ShapeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insérer une forme" 
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Sélectionner une forme" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Type de forme -->
        <GroupBox Grid.Row="1" Header="Type de forme" Margin="0,0,0,15">
            <WrapPanel Margin="10">
                <RadioButton x:Name="RectangleRadio" Content="Rectangle" Margin="5" IsChecked="True" Checked="ShapeType_Changed"/>
                <RadioButton x:Name="EllipseRadio" Content="Ellipse" Margin="5" Checked="ShapeType_Changed"/>
                <RadioButton x:Name="TriangleRadio" Content="Triangle" Margin="5" Checked="ShapeType_Changed"/>
                <RadioButton x:Name="StarRadio" Content="Étoile" Margin="5" Checked="ShapeType_Changed"/>
                <RadioButton x:Name="ArrowRadio" Content="Flèche" Margin="5" Checked="ShapeType_Changed"/>
                <RadioButton x:Name="LineRadio" Content="Ligne" Margin="5" Checked="ShapeType_Changed"/>
            </WrapPanel>
        </GroupBox>

        <!-- Dimensions -->
        <GroupBox Grid.Row="2" Header="Dimensions" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Largeur:" Width="80" VerticalAlignment="Center"/>
                    <Slider x:Name="WidthSlider" Width="200" Minimum="50" Maximum="400" Value="150" 
                            TickFrequency="10" ValueChanged="Dimension_Changed"/>
                    <TextBlock Text="{Binding Value, ElementName=WidthSlider, StringFormat={}{0:F0} px}" 
                               Width="60" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Hauteur:" Width="80" VerticalAlignment="Center"/>
                    <Slider x:Name="HeightSlider" Width="200" Minimum="50" Maximum="400" Value="150" 
                            TickFrequency="10" ValueChanged="Dimension_Changed"/>
                    <TextBlock Text="{Binding Value, ElementName=HeightSlider, StringFormat={}{0:F0} px}" 
                               Width="60" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Couleurs -->
        <GroupBox Grid.Row="3" Header="Couleurs" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Remplissage:" Width="100" VerticalAlignment="Center"/>
                    <Button x:Name="FillColorButton" Width="100" Height="25" Click="FillColorButton_Click">
                        <Border Background="LightBlue" Width="80" Height="20"/>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Bordure:" Width="100" VerticalAlignment="Center"/>
                    <Button x:Name="StrokeColorButton" Width="100" Height="25" Click="StrokeColorButton_Click">
                        <Border Background="Black" Width="80" Height="20"/>
                    </Button>
                    <TextBlock Text="Épaisseur:" Width="80" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    <Slider x:Name="StrokeThicknessSlider" Width="100" Minimum="0" Maximum="10" Value="2" 
                            TickFrequency="1" ValueChanged="Dimension_Changed"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Aperçu -->
        <GroupBox Grid.Row="5" Header="Aperçu" Margin="0,0,0,15">
            <Border BorderBrush="LightGray" BorderThickness="1" Background="White" Margin="10">
                <Canvas x:Name="PreviewCanvas" Width="400" Height="200"/>
            </Border>
        </GroupBox>

        <!-- Boutons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Insérer" Width="80" Height="30" Margin="0,0,10,0" Click="OK_Click" IsDefault="True"/>
            <Button Content="Annuler" Width="80" Height="30" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>